mixin tabs()
  +b.UL.tabs&attributes(attributes)
    block

mixin tab()
  +e.LI.tab&attributes(attributes)
    block

mixin tabs-content()
  .tabs-content&attributes(attributes)
    block

mixin tab-wrapper()
  .tabs-content__wrapper&attributes(attributes)
    block

mixin ui-kit-tabs()
  +ui-section
    +ui-section-head
      +ui-title Tabs
      +ui-path
        p Block: blocks/tabs/tabs

    +ui-section-content()
      +tabs
        +tab()(data-tab-target="tab1").is-active Information
        +tab()(data-tab-target="tab2") Content
        +tab()(data-tab-target="tab3") Texts
      +tabs-content
        +tab-wrapper()(data-tab="tab1" data-tab-group="testtabs").is-active
          p Information
        +tab-wrapper()(data-tab="tab2" data-tab-group="testtabs")
          p Content
        +tab-wrapper()(data-tab="tab3" data-tab-group="testtabs")
          p Texts

    //- With +ui-section-content(true) container disappears
    //- Choose +ui-elements-list() for creating list of inline elements
    //- Border for special section: +ui-special()
