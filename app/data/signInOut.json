{
  "id": "popup-login",
  "info": {
    "title": "Eπωφελείσαι από",
    "items": [
      "Γρήγορο checkout",
      "Προσωποποιημένες προτάσεις",
      "Wishlists"
    ]
  },
  "links": [
    {
      "class": "is-active",
      "text": "ΣΥΝΔΕΣΗ",
      "target": "signIn"
    },
    {
      "text": "ΕΓΓΡΑΦΗ",
      "target": "signUp"
    }
  ],
  "forms": [
    {
      "id": "signIn",
      "class": "is-active-passive is-active",
      "blocks": [
        {
          "type": "input",
          "label": "email",
          "inputType": "email",
          "placeholder": "example@gmail.com",
          "required": true,
          "name": "email"
        },
        {
          "type": "input",
          "label": "κωδικοσ",
          "inputType": "password",
          "placeholder": "password123",
          "required": true,
          "name": "password"
        },
        {
          "type": "checkbox",
          "required": false,
          "name": "checkbox1",
          "value": "checkbox1",
          "text": "Keep me sign in",
          "boxClass": "_checkbox"
        },
        {
          "type": "button",
          "text": "ΣΥΝΔΕΣΗ",
          "boxClass": "_button"
        },
        {
          "type": "final",
          "boxClass": "_final"
        }
      ]
    },
    {
      "id": "signUp",
      "blocks": [
        {
          "type": "input",
          "label": "email",
          "inputType": "email",
          "placeholder": "example@gmail.com",
          "required": true,
          "name": "email"
        },
        {
          "type": "input",
          "label": "ONOMA",
          "inputType": "text",
          "placeholder": "Μαρία",
          "required": true,
          "name": "firstName"
        },
        {
          "type": "input",
          "label": "EΠΙΘΕΤΟ",
          "inputType": "text",
          "placeholder": "Παπαδοπούλου",
          "required": true,
          "name": "lastName"
        },
        {
          "type": "input",
          "label": "ΚΩΔΙΚΟΣ",
          "inputType": "password",
          "placeholder": "password123",
          "required": true,
          "id": "password1",
          "name": "password"
        },
        {
          "type": "input",
          "label": "ΕΠΙΒΕΒΑΙΩΣΗ ΚΩΔΙΚΟΥ",
          "inputType": "password",
          "placeholder": "password123",
          "required": true,
          "equalTo": "#password1",
          "id": "password2",
          "name": "passwordCheck"
        },
        {
          "type": "checkbox",
          "required": true,
          "name": "checkbox1",
          "value": "checkbox1",
          "text": "Αποδέχομαι τους όρους και τις προυποθέσεις",
          "boxClass": "_checkbox _checkbox_big-margin"
        },
        {
          "type": "checkbox",
          "required": true,
          "name": "checkbox2",
          "value": "checkbox2",
          "text": "Εγγραφή στο newsletter",
          "boxClass": "_checkbox"
        },
        {
          "type": "button",
          "text": "ΕΓΓΡΑΦΗ",
          "boxClass": "_button"
        }
      ]
    }
  ]
}
