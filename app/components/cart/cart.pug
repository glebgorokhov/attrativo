mixin cart()
  +b.cart&attributes(attributes)
    .container
      +e.header
        +e.H1.title SHOPPING CART
        +e.P.amount.hide-lg 3 Τεμάχια
        +e.close.show-lg
          a(href="#")
            +icon('close_bold')
      +e.content
        +grid.grid_cart
          +col({xl: 9, lg: 12})
            +grid.grid_cart
              each item in [0, 1, 2]
                +col({xl: 4, lg: 12}).grid__col_flex
                  +cart-item(getData('cart-items')[item])

          +col({xl: 3, lg: 12})
            +cart-info

mixin ui-kit-cart()
  +ui-section
    +ui-section-head
      +ui-title Cart
      +ui-path
        p Component: components/cart/cart

    +ui-section-content(true)
      +cart

    //- With +ui-section-content(true) container disappears
    //- Choose +ui-elements-list() for creating list of inline elements
    //- Border for special section: +ui-special()
